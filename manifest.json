{
  "manifest_version": 3,
  "name": "Simple Image Opener",
  "version": "1.0.0",
  "description": "Open images in a new window when pressing Shift + Ctrl and clicking an image.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
